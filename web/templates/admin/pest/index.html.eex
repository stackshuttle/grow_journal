<h2>Listing pests</h2>

<table class="table">
  <thead>
    <tr>
      <th>Plant</th>
      <th>Name</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for pest <- @pests do %>
    <tr>
      <td><%= pest.plant_id %></td>
      <td><%= pest.name %></td>

      <td class="text-right">
        <%= link "Show", to: admin_plant_pest_path(@conn, :show, @plant, pest), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: admin_plant_pest_path(@conn, :edit, @plant, pest), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: admin_plant_pest_path(@conn, :delete, @plant, pest), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New pest", to: admin_plant_pest_path(@conn, :new, @plant) %>
