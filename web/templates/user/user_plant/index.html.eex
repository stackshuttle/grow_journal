<h2>My plants</h2>

<table class="table">
  <thead>
    <tr>
      <th>Plant</th>
      <th>Events</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for user_plant <- @user_plants do %>
    <tr>
      <td><%= user_plant.plant.name %></td>
      <td><%= number_events user_plant %></td>

      <td class="text-right">
        <%= link "Show", to: user_user_plant_path(@conn, :show, user_plant), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: user_user_plant_path(@conn, :edit, user_plant), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: user_user_plant_path(@conn, :delete, user_plant), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "Add plant", to: user_user_plant_path(@conn, :new) %>
